{
  "name": "FileToLink Bot",
  "description": "Telegram bot to convert files into permanent sharable links. Includes fsub, shortner, and admin controls.",
  "repository": "https://github.com/itskrishname/FileToLink",
  "keywords": ["telegram", "bot", "filetolink", "python", "heroku"],
  "env": {
    "BOT_TOKEN": {
      "description": "Your bot's API token from BotFather",
      "required": true
    },
    "API_ID": {
      "description": "Telegram API ID from my.telegram.org",
      "required": true
    },
    "API_HASH": {
      "description": "Telegram API Hash from my.telegram.org",
      "required": true
    },
    "DB_URL": {
      "description": "MongoDB connection URL (from MongoDB Atlas)",
      "required": true
    },
    "OWNER_ID": {
      "description": "Telegram user ID of the bot owner",
      "required": true
    },
    "BOT_USERNAME": {
      "description": "Your bot username (without @)",
      "required": true
    },
    "LOG_CHANNEL": {
      "description": "Channel ID for logging (with -100 prefix)",
      "required": false
    },
    "UPDATES_CHANNEL": {
      "description": "Username of your updates channel (with @)",
      "required": false
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
  }
